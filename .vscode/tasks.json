{
  "tasks": [
    {
      "type": "shell",
      "label": "Meson: build current project",
      "command": "/usr/bin/meson",
      "args": ["compile"],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": ["relative", "${workspaceFolder}/build"]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build the current project using meson."
    }
  ],
  "version": "2.0.0"
}
